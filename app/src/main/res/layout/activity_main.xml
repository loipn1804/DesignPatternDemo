<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liophan.designpatterndemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStrategy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Strategy"/>

        <Button
            android:id="@+id/btnObserver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Observer"/>

        <Button
            android:id="@+id/btnFactory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Factory"/>

        <Button
            android:id="@+id/btnAbstractFactory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="AbstractFactory"/>

        <Button
            android:id="@+id/btnSingleTon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SingleTon"/>

        <Button
            android:id="@+id/btnBuilder"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Builder"/>
    </LinearLayout>
</ScrollView>
